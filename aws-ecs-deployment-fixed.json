{
  "family": "counsel-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::585008043505:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::585008043505:role/counsel-task-role",
  "containerDefinitions": [
    {
      "name": "counsel-container",
      "image": "585008043505.dkr.ecr.us-east-1.amazonaws.com/counsel-ai:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/counsel-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "us-east-1"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "BEDROCK_REGION",
          "value": "us-east-1"
        },
        {
          "name": "BEDROCK_PRIMARY_MODEL",
          "value": "us.anthropic.claude-sonnet-4-20250514-v1:0"
        },
        {
          "name": "BEDROCK_SECONDARY_MODEL",
          "value": "us.anthropic.claude-3-7-sonnet-20250219-v1:0"
        },
        {
          "name": "BEDROCK_FALLBACK_MODEL",
          "value": "mistral.mistral-7b-instruct-v0:2"
        },
        {
          "name": "BEDROCK_TIMEOUT",
          "value": "30"
        },
        {
          "name": "MAX_TOKENS",
          "value": "2000"
        },
        {
          "name": "ALLOWED_ORIGINS",
          "value": "https://www.legalizeme.site,https://legalizeme.site"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "YOUR_AWS_ACCESS_KEY_ID"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "YOUR_AWS_SECRET_ACCESS_KEY"
        },
        {
          "name": "SECRET_KEY",
          "value": "YOUR_SECRET_KEY_FOR_JWT"
        },
        {
          "name": "HUGGING_FACE_TOKEN",
          "value": "YOUR_HUGGING_FACE_TOKEN"
        },
        {
          "name": "DATABASE_URL",
          "value": "sqlite:///./counsel.db"
        },
        {
          "name": "REDIS_URL",
          "value": ""
        }
      ],

      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
